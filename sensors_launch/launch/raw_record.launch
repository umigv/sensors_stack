<launch>

    <!-- embedded -->
    <include file="$(find sensors_launch)/launch/embedded.launch"/>     

    <!-- phidgets raw imu data -->
    <rosparam command="load" file="$(find sensors_launch)/params/imu.yaml"/>
    <node pkg="nodelet" type="nodelet" name="imu_manager" args="manager" output="screen" />
    <node name="PhidgetsSpatialNodelet" pkg="nodelet" type="nodelet" output="screen" clear_params="true" args="load phidgets_spatial/PhidgetsSpatialNodelet imu_manager">
        <remap from="imu/data_raw" to="imu/data_raw_ned" />
        <remap from="imu/mag" to="imu/mag_ned" />
    </node>

    <!-- gps -->
    <node name="garmin_setup" pkg="sensors_scripts" type="garmin_setup.sh" launch-prefix="sudo" />
    <include file="$(find garmin_gps)/launch/gps.launch"/>

    <!-- lidar -->
    <include file="$(find sensors_launch)/launch/velodyne.launch"/>

    <!-- teleop and velocity -->
    <include file="$(find sensors_launch)/launch/velocity.launch"/>



</launch>