<!-- launches serial_node, joy_node, and teleop_node -->
<launch>
  <arg name="joy_dev" default="/dev/input/js0" />
  <arg name="config_filepath" default="$(find sensors_launch)/params/teleop_ps4.yaml" />
  <arg name="joy_topic" default="joy" />

  <rosparam command="load" file="$(find sensors_launch)/params/teleop_ps4.yaml" />

  <node pkg="joy" type="joy_node" name="joy_node">
    <param name="deadzone" value="0.05" />
    <param name="autorepeat_rate" value="5.0" />
    <param name="coalesce_interval" value="0.02"/>
    <param name="dev" value="$(arg joy_dev)" />
  </node>

  <node pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
    <rosparam command="load" file="$(arg config_filepath)" />
    <remap from="joy" to="$(arg joy_topic)" />
    <remap from="cmd_vel" to="/teleop/cmd_vel" />
  </node>
</launch>