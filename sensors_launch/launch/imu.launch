<launch>

    <rosparam command="load" file="$(find sensors_launch)/params/imu.yaml"/>

    <!-- phidgets raw imu data -->
    <node pkg="nodelet" type="nodelet" name="imu_manager" args="manager" output="screen" />
    <node name="PhidgetsSpatialNodelet" pkg="nodelet" type="nodelet" output="screen" clear_params="true" args="load phidgets_spatial/PhidgetsSpatialNodelet imu_manager">
        <remap from="imu/data_raw" to="imu/data_raw_ned" />
        <remap from="imu/mag" to="imu/mag_ned" />
    </node>

    <!-- transform from ned to enu coordinate frame -->
    <node name="transform_imu_node" pkg="transform_imu" type="transform_imu_node" output="screen" required="true" clear_params="true">
        <remap from="imu/data_raw" to="imu/data_raw_ned" />
        <remap from="imu/mag" to="imu/mag_ned" />

        <remap from="imu/data_raw_enu" to="imu/data_raw" />
        <remap from="imu/mag_enu" to="imu/mag" />
    </node>

    <!-- calculate orientation from raw imu data -->
    <node name="complementary_filter_node" pkg="imu_complementary_filter" type="complementary_filter_node" output="screen" required="true" clear_params="true" />

    <!-- ensures timestamps are consecutive -->
    <node name="imu_temporal_filter_node" pkg="imu_temporal_filter" type="imu_temporal_filter_node" output="screen" required="true" clear_params="true" />

</launch>